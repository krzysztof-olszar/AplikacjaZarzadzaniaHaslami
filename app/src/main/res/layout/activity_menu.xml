<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.tlo">

    <ListView
        android:id="@+id/GlownaLista"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/element_list" />

    <Button
        android:id="@+id/dodaj"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:onClick="DodajActivity"
        android:padding="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        android:text="+"
        android:textSize="34sp"
        android:theme="@style/Theme.button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/GlownaLista" />

    <ImageButton
        android:id="@+id/Gear"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="344dp"
        android:layout_marginBottom="8dp"
        android:onClick="zmienHaslo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/gear" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginStart="93dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="5dp"
        android:onClick="dodajKategorie"
        android:src="@drawable/addkat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Gear"
        app:layout_constraintStart_toEndOf="@+id/dodaj" />

    <ImageButton
        android:id="@+id/zmienMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="1dp"
        android:onClick="zmienMenu"
        android:src="@drawable/addkat"
        app:layout_constraintStart_toEndOf="@+id/dodaj"
        app:layout_constraintTop_toBottomOf="@+id/GlownaLista" />
</androidx.constraintlayout.widget.ConstraintLayout>