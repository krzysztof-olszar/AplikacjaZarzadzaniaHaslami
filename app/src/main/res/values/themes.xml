<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ZarzadzanieHaslami" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/glowny</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/glowny</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/kolorTla</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/glowny</item>
    </style>
    <style name="Theme.tlo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:background">@color/kolorTla</item>
    </style>
    <style name="Theme.button" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:backgroundTint">@color/kolorPrzycisku</item>
    </style>
</resources>